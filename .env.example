# ===========================
# Backend Configuration
# ===========================
DATABASE_URL=sqlite:///./data/violations.db
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:5173

# ===========================
# Vision Engine
# ===========================
VIDEO_SOURCE=0                          # 0 = webcam, or path to video file, or RTSP URL
MODEL_PATH=models/yolo26n_int8_openvino # Path to OpenVINO IR model directory

# Zone polygon vertices (JSON array of [x, y] pairs)
ZONE_POLYGON=[[100,400],[500,400],[500,700],[100,700]]

# Expected lane direction vector [dx, dy] (e.g., [1, 0] = left-to-right)
LANE_DIRECTION=[1,0]

# Dwell time threshold in frames (e.g., 150 = 5 seconds at 30 FPS)
DWELL_THRESHOLD=150

# Consecutive wrong-way frames required to trigger violation
DIRECTION_THRESHOLD=10
